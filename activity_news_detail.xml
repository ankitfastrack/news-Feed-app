<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsDetail"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2294F6"
        android:fontFamily="@font/aladin"
        android:padding="10dp"
        android:text="NEWS APP"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textStyle="bold"></TextView>

    <ImageView
        android:id="@+id/details_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_weight="1"></TextView>
            <TextView
                android:id="@+id/details_title_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/detail_published_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Published At"
                android:layout_weight="1"></TextView>
            <TextView
                android:id="@+id/detail_published_at_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/detail_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Author"
                android:layout_weight="1"></TextView>
            <TextView
                android:id="@+id/detail_author_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/detail_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Source"
                android:layout_weight="1"></TextView>
            <TextView
                android:id="@+id/detail_source_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"></TextView>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"></TextView>

</LinearLayout>